# Langflow Builder - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===== REQUIRED API KEYS =====
OPENAI_API_KEY=sk-your-openai-api-key-here

# ===== LANGFLOW CONFIGURATION =====
LANGFLOW_HOST=localhost
LANGFLOW_PORT=7860
LANGFLOW_DATABASE_URL=sqlite:///./langflow.db
LANGFLOW_COMPONENTS_PATH=./custom_components

# ===== MODEL CONFIGURATIONS =====
DEFAULT_OPENAI_MODEL=gpt-4o
ARCHITECT_TEMPERATURE=0.1
CONVERSATIONAL_TEMPERATURE=0.1
COMPONENT_GENERATOR_TEMPERATURE=0.1
MAX_TOKENS=4000

# ===== MEMORY & CONVERSATION SETTINGS =====
MEMORY_MESSAGE_LIMIT=100
SESSION_TIMEOUT=60
ENABLE_PERSISTENT_MEMORY=true

# ===== ROUTER CONFIGURATION =====
INTENT_CONFIDENCE_THRESHOLD=0.6
FALLBACK_CONFIDENCE_THRESHOLD=0.5
ENABLE_CONTEXT_VALIDATION=true
CONTEXT_VALIDATION_DEPTH=4

# ===== DEVELOPMENT SETTINGS =====
DEBUG=false
LOG_LEVEL=INFO
ENABLE_TRACING=false

# ===== SECURITY SETTINGS =====
SECRET_KEY=change-me
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:7860

# ===== PERFORMANCE SETTINGS =====
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=10
ENABLE_RESPONSE_CACHE=true
CACHE_TTL=300

# ===== MONITORING & ANALYTICS =====
ENABLE_METRICS=false
ANALYTICS_ENDPOINT=

# ===== BACKUP & RECOVERY =====
BACKUP_DIRECTORY=./backups
BACKUP_INTERVAL=24
